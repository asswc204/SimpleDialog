<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_ten_white_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lines="1"
            android:textColor="@color/dialog_content"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mContentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.2"
            android:gravity="center"
            android:textColor="@color/dialog_content"
            android:textSize="14sp"
            android:visibility="gone" />

        <View
            style="@style/h_divider"
            android:layout_marginTop="17dp" />

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mNavTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/common_tip_color"
                android:textSize="16sp"
                android:visibility="gone" />

            <View
                android:id="@+id/mBottomDivider"
                style="@style/v_divider"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mPosTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/common_blue_color"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
